<h3>Name: <%= author.name%></h3>
<div class="btn-group">
<button><a href="/authors/<%= author.id%>/edit">Edit</a></button>
<%- include("../partials/deleteForm.ejs", {url: `/authors/${author.id}`})%>
</div>

<% if (booksByAuthor.length > 0) { %>
    <h2>Books By Author</h2>
    <% booksByAuthor.forEach(book => { %>
        <img height="150" width="100" src="<%= book.coverImagePath%>" alt="asdf">
        <hr>
    <% }) %>
<% } %>