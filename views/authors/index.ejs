<h3>Search Authors</h3>
<form action="/authors" method="get">
    <div class="form-group">
    <label>Name</label>
    <input type="text" name="name" value="<%=searchOptions.name%>">
    <button type="submit">Search</button>
</div>
</form>
<br>
<% authors.forEach(author => { %>
    <!-- <div><h3><%= author.name  %></h3> -->
        <div class="card">
            <div class="card-body"><%= author.name%></div>
       
        <div class="card-body">   
        <div class="btn-group">
        <button class="btn btn-outline-primary"><a href="/authors/<%= author.id%>">View</a></button>
        <button class="btn btn-outline-primary"><a href="/authors/<%= author.id%>/edit">Edit</a></button>
        <%- include('../partials/deleteForm',
              { url: `/authors/${author.id}` }) %>
            </div> 
            </div>
    </div>
</div>
   
<% }) %>